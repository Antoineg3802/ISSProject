{% extends 'base.html.twig' %}

{% block title %}ISSProject{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/register.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/link.css') }}">
{% endblock %}

{% block body %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<center>

    <div class="container mt-5">
  <div class="row">
    {# <div class="col-md-8 col-md-offset-2"> #}
        <div class="panel panel-default">
          <h1> <div class="panel-heading">Cr√©er votre compte</div> </h1>
          <br>
          <div class="panel-body">
            {{ form_start(registrationForm) }}

            <div class="form_group">
                <div class="col-md-8 col-md-offset-2">
                {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form_group">
                <div class="col-md-8 col-md-offset-2">
                {{ form_row(registrationForm.plainPassword, {'attr': {'class': 'form-control'}, 'laber': "Mot de passe"}) }}
                </div>
            </div>
            <br> 
            </center>
            <div class="checkBox">
            {{ form_row(registrationForm.agreeTerms, {
                'attr': {'class': 'form-check-label'},
                'label': "J'accepte les termes"
            }) }}           
            </div>
            <center>
            <br> 

            <div class="form-group">
                <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-btn fa-user"></i> S'inscrire
                    </button>
                </div>
            </div>
            {{ form_end(registrationForm) }}
          </div>
        </div>
    {# </div> #}
  </div>
</div>
</center>
{% endblock %}
