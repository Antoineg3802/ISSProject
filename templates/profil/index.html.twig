{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/profil.css') }}">
{% endblock %}

{% block body %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


    {% if app.user %}
    <div class="container d-flex align-self-center h-100" style="margin-top:10%">
        <div class="row">
            <div class="container bootstrap snippets bootdey profil">
                <div class="panel-body inf-content">
                    <div class="row">
                        <div class="col-md-4">
                            <img style="width: 80%, padding-left: 20%" alt="" title="" class="img-circle img-thumbnail isTooltip" src="{{ asset('img/profil.svg') }}" data-original-title="Usuario" />                            
                        </div>
                        <div class="col-md-6 align-self-center">
                            <strong class="h1">Informations</strong><br /><br/><br/>
                            <div class="">
                                <table class="table table-user-information">
                                    <tbody>
                                        <tr>
                                            <td>
                                                <strong>
                                                    <span class="glyphicon glyphicon-user text-primary">
                                                    </span>
                                                    Identifiant
                                                </strong>
                                            </td>
                                            <td class="text-primary username"> {{ app.user.username }} </td>
                                        </tr>
                                        {# <tr>
                                            <td>
                                                <strong>
                                                    <span
                                                        class="glyphicon glyphicon-envelope text-primary"
                                                    ></span>
                                                    Email
                                                </strong>
                                            </td>
                                            <td class="text-primary email"> orianmaillot@gmail.Com</td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>
                                                    <span
                                                        class="glyphicon glyphicon-calendar text-primary"
                                                    ></span>
                                                    Date de cr√©ation
                                                </strong>
                                            </td>
                                            <td class="text-primary creationDate">12/06/2022</td>
                                        </tr> #}
                                    </tbody>
                                </table>
                                <p>
                                    <div class="row">
                                        <div class="btn btn-danger mt-1" id="buttonDisplay">
                                            <a class="text-decoration-none text-reset" href="{{ path('app_logout') }}">Deconnexion</a>
                                        </div>
                                    </div>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="mb-3 align-self-center">
            <center>
                <h4> You are not logged, please login in the link : <a href="/login">login</a> </h4>
                <h6> You can register if you have not an account in the link : <a href="/register">register</a></h6> 
            </center>
        </div>
    {% endif %}
{% endblock %}
