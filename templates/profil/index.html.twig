{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block stylesheets %}
    {# <link rel="stylesheet" href="{{ asset('styles/profil.css') }}"> #}
    <link rel="stylesheet" href="{{ asset('styles/link.css') }}">
{% endblock %}

{% block body %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">


    {% if app.user %}
    <div class="container d-flex align-self-center h-100" style="margin-top:10%">
        <div class="row">
            <div class="container bootstrap snippets bootdey profil">
                <div class="panel-body inf-content">
                    <div class="row">
                        <div class="col-md-4">
                            <img style="width: 80%, padding-left: 20%" alt="" title="" class="img-circle img-thumbnail isTooltip" src="{{ asset('img/profil.svg') }}" data-original-title="Usuario" />                            
                        </div>
                        <div class="col-md-6 align-self-center">
                            <strong class="h1">Informations</strong><br /><br/><br/>
                            <div class="">
                                <table class="table table-user-information">
                                    <tbody>
                                        <tr>
                                            <td>
                                                <strong>
                                                    <span class="glyphicon glyphicon-user text-primary">
                                                    </span>
                                                    Identifiant
                                                </strong>
                                            </td>
                                            <td class="text-primary username"> {{ app.user.username }} </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <a class ="text-decoration-none text-reset" href="{{ path('app_logout') }}">
                                    <p>
                                        <div class="row">
                                            <div class="btn btn-danger mt-1 " id="buttonDisplay">
                                                Deconnexion
                                            </div>
                                        </div>
                                    </p>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="mb-3 align-self-center mt-5">
            <center>
                <h4> Vous n'etes pas connectez, vous pouvez vous connectez en cliquant sur le lien : <a class="link" href="/login">login</a> </h4>
                <h6> Vous pouvez aussi vous inscrire sur ce lien : <a class="link" href="/register">register</a></h6> 
                <img style="height: 80px, padding-left: 200%" class="img-circle img-thumbnail isTooltip  border-0 mt-5 widht" src="https://www.nasa.gov/sites/all/themes/custom/nasatwo/images/nasa-logo.svg"/>
            </center>
        </div>
    {% endif %}
{% endblock %}
