{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('styles/login.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/link.css') }}">
{% endblock %}

{% block body %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3 align-self-center verticalCenter">
            <center>
                <h4> Vous etes déjà connectez, vous pouvez allez sur votre page de profil sur ce lien : <a class="link" href="/profil">profil</a> </h4>
                <img style="height: 80px, padding-left: 200%" class="img-circle img-thumbnail isTooltip  border-0 mt-5 widht" src="https://www.nasa.gov/sites/all/themes/custom/nasatwo/images/nasa-logo.svg"/>
            </center>
        </div>
    {% else %}
    <center>
    
    <div class="container">
        <div class="row justify-content-center align-self-center">
            <div class="col-md-8 col-md-offset-2">
                <div class="panel panel-default">
                    <br>
                    <h1> <div class="panel-heading">Se connecter</div> </h1>
                    <br>
                    <div class="panel-body">
                            <div class="form-group">
                                <label for="email" class="col-md-4 control-label">E-Mail</label>

                                <div class="col-md-6 mt-1">
                                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="password" class="col-md-4 control-label mt-3">Mot de passe</label>

                                <div class="col-md-6">
                                    <input type="password" name="password" id="inputPassword" class="form-control mt-1" autocomplete="current-password" required>
                                </div>
                            </div>

                            <div class="form-group mt-3">
                                <div class="col-md-6 col-md-offset-4">
                                    <input type="hidden" name="_csrf_token"
                                        value="{{ csrf_token('authenticate') }}"
                                    >
                                        <div class="checkbox mb-3">
                                            <label>
                                                <input type="checkbox" name="_remember_me"> Se souvenir de moi
                                            </label>
                                        </div>
                                        <div class=" mb-1 mt-0">
                                            <a href="/register">S'inscrire</a>
                                        </div>
                                    <button class="btn btn-lg btn-primary" type="submit">
                                        Se connecter
                                    </button>

                                    
                                </div>
                            </div>
                        <img style="height: 80px, padding-left: 200%" class="img-circle img-thumbnail isTooltip  border-0 mt-5 widht" src="https://www.nasa.gov/sites/all/themes/custom/nasatwo/images/nasa-logo.svg"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </center>
    {% endif %}
</form>
{% endblock %}
